<Window x:Class="shalgalt2.Dialog2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shalgalt2"
        mc:Ignorable="d"
        Title="Dialog2" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="R" FontSize="30"/>
        </Grid>
        <Grid Grid.Row="1">
            <Slider x:Name="RedSlider"
        Minimum="0" Maximum="255" Value="0"
        TickFrequency="1" IsSnapToTickEnabled="True"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Text="G" FontSize="30"/>
        </Grid>
        <Grid Grid.Row="3">
            <Slider  x:Name="GreenSlider"
        Minimum="0" Maximum="255" Value="0"
        TickFrequency="1" IsSnapToTickEnabled="True"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="4">
            <TextBlock Text="B" FontSize="30"/>
        </Grid>
        <Grid Grid.Row="5">
            <Slider  x:Name="BlueSlider"
        Minimum="0" Maximum="255" Value="0"
        TickFrequency="1" IsSnapToTickEnabled="True"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"/>
        </Grid>
        <Button Grid.Row="6" Background="LightGray" Margin="10" Content="Zamknj" x:Name="btn_02" Click="btn_02_Click" />
    </Grid>
</Window>
