<Window x:Class="shalgalt2.Dialog1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shalgalt2"
        mc:Ignorable="d"
        Title="TextWin" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Podaj text" FontSize="20" VerticalAlignment="Bottom"/>
        <TextBox Margin="15" Grid.Row="1"  FontSize="15" x:Name="tbox_01"/>
        <Button x:Name="btn_close" Content="Zamknij" Background="LightGray"  Grid.Row="2" Margin="15" FontSize="15" Click="btn_close_Click"/>
    </Grid>
</Window>
