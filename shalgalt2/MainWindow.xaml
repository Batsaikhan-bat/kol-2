        <Button x:Name="btn_02" Content="ColorWin" HorizontalAlignment="Left"  VerticalAlignment="Top"
        FontSize="10" Height="69" Width="128" Margin="152,0,0,0"  Click="btn_02_Click"/>


        <Button x:Name="btn_03" Content="FontWin" HorizontalAlignment="Left"  VerticalAlignment="Top"
        FontSize="10" Height="69" Width="128" Margin="306,0,0,0"  Click="btn_03_Click"/>
        <TextBlock x:Name="tb_01" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="500"/>
    </Grid>
</Window>
