<Window x:Class="Kolokwium_nr2.tsonh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium_nr2"
        mc:Ignorable="d"
        Title="tsonh" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Ok" Content="OK" Margin="10" FontSize="24" Background="GreenYellow" 
                     Grid.Column="0" Click="Ok_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Margin="10" FontSize="24" Background="Red" 
         Grid.Column="1"/>
        </Grid>
        <StackPanel>
            <Label Content="ID" FontSize="24"/>
            <TextBox x:Name="id" FontSize="24"  />
            <Label Content="Name" FontSize="24"  />
            <TextBox x:Name="Name" FontSize="24"  />
            <Label Content="Author" FontSize="24"/>
            <TextBox x:Name="Author" FontSize="24" />
            <Label Content="Description" FontSize="24"/>
            <TextBox x:Name="Description" FontSize="24"  FontStyle="Normal"/>
        </StackPanel>
        
    </Grid>
</Window>
