<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zadanie 1" Height="400" Width="300">
    <Grid Margin="10">
        <Button Content="Otwórz plik z danymi" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="OpenFile_Click"/>
        <ListBox x:Name="NumberListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="150" Margin="0,40,0,0" Width="200"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,200,0,0">
            <Label x:Name="CountLabel" Content="Ilość elementów: " />
            <Label x:Name="SumLabel" Content="Suma elementów: " />
            <Label x:Name="AverageLabel" Content="Średnia elementów: " />
        </StackPanel>
    </Grid>
</Window>