<Window x:Class="shalgalt3.Dialog_01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shalgalt3"
        mc:Ignorable="d"
        Title="Dialog_01" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Marka"/>
            <TextBox x:Name="tbox_01" Width="280"/>
            <Label Content="Model"/>
            <TextBox x:Name="tbox_02" Width="280"/>
            <Label Content="Rocznik"/>
            <TextBox x:Name="tbox_03" Width="280"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="bt_01" Content="Dodaj" HorizontalAlignment="Right" Width="140" Height="20" Click="bt_01_Click"/>
            <Button x:Name="bt_02" Grid.Column="1" Content="Anuluj" HorizontalAlignment="Left" Width="140" Height="20" Click="bt_02_Click" />
        </Grid>
    </Grid>
</Window>
