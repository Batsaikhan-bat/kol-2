<Window x:Class="shalgalt3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shalgalt3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="CarList" AutoGenerateColumns="False" 
                  ItemsSource="{Binding Cars}" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Marka}" Width="*" />
                <DataGridTextColumn Binding="{Binding Model}"  Width="*"/>
                <DataGridTextColumn Binding="{Binding Year}"  Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Dodaj" x:Name="bt_01" FontSize="30" Click="bt_01_Click"/>
            <Button Grid.Column="1" Content="Edytuj" x:Name="bt_02" FontSize="30" Click="bt_02_Click"/>
            <Button Grid.Column="2" Content="Usun" x:Name="bt_03" FontSize="30" Click="bt_03_Click"/>
        </Grid>
    </Grid>
</Window>
